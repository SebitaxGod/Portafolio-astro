---
import { Mail, Phone, MapPin, Linkedin, Github, Send } from 'lucide-react';
import { profileData } from '../data/profile';
---

<section id="contact" class="py-20 px-4 bg-linear-to-br from-slate-900 via-purple-900 to-slate-900 text-white">
  <div class="max-w-4xl mx-auto">
    <div class="fade-in-up">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-4">
        Contacto
      </h2>
      <div class="w-20 h-1 bg-purple-400 mx-auto mb-8"></div>
      
      <p class="text-center text-lg text-slate-200 mb-12">
        Siempre abierto a colaborar en proyectos de desarrollo web, innovación tecnológica y soluciones digitales orientadas al usuario.
      </p>
      
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <a
          href={`mailto:${profileData.email}`}
          class="contact-card bg-slate-800 p-6 rounded-lg shadow-lg hover:bg-slate-700 transition-colors flex items-center gap-4"
        >
          <div class="bg-purple-600 p-3 rounded-full">
            <Mail size={24} />
          </div>
          <div>
            <h3 class="font-semibold text-lg mb-1">Email</h3>
            <p class="text-slate-300 text-sm">{profileData.email}</p>
          </div>
        </a>
        
        <a
          href={`tel:${profileData.phone}`}
          class="contact-card bg-slate-800 p-6 rounded-lg shadow-lg hover:bg-slate-700 transition-colors flex items-center gap-4"
        >
          <div class="bg-purple-600 p-3 rounded-full">
            <Phone size={24} />
          </div>
          <div>
            <h3 class="font-semibold text-lg mb-1">Teléfono</h3>
            <p class="text-slate-300 text-sm">{profileData.phone}</p>
          </div>
        </a>
        
        <div class="contact-card bg-slate-800 p-6 rounded-lg shadow-lg flex items-center gap-4">
          <div class="bg-purple-600 p-3 rounded-full">
            <MapPin size={24} />
          </div>
          <div>
            <h3 class="font-semibold text-lg mb-1">Ubicación</h3>
            <p class="text-slate-300 text-sm">{profileData.location}</p>
          </div>
        </div>
        
        <div class="bg-slate-800 p-6 rounded-lg shadow-lg contact-card">
          <h3 class="font-semibold text-lg mb-4">Redes Sociales</h3>
          <div class="flex gap-4">
            <a
              href={`https://${profileData.linkedin}`}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link bg-purple-600 p-3 rounded-full hover:bg-purple-700 transition-colors"
            >
              <Linkedin size={24} />
            </a>
            <a
              href={`https://${profileData.github}`}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link bg-purple-600 p-3 rounded-full hover:bg-purple-700 transition-colors"
            >
              <Github size={24} />
            </a>
          </div>
        </div>
      </div>
      
      <div class="text-center fade-in-delay">
        <a
          href={`mailto:${profileData.email}`}
          class="cta-button inline-flex items-center gap-3 bg-purple-600 hover:bg-purple-700 px-8 py-4 rounded-lg text-lg font-semibold transition-colors"
        >
          <Send size={20} />
          Enviar un mensaje
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }
  
  .fade-in-delay {
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }
  
  .contact-card {
    animation: fadeInUp 0.5s ease-out both;
  }
  
  .contact-card:hover {
    transform: scale(1.05);
  }
  
  .social-link:hover {
    transform: scale(1.1);
  }
  
  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(124, 58, 237, 0.3);
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
