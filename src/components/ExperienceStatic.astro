---
import { Briefcase, MapPin, Calendar } from 'lucide-react';
import { experienceData } from '../data/experience';
---

<section id="experience" class="py-20 px-4 bg-white">
  <div class="max-w-6xl mx-auto">
    <div class="fade-in-up">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-4 text-slate-900">
        Experiencia Profesional
      </h2>
      <div class="w-20 h-1 bg-purple-600 mx-auto mb-12"></div>
      
      <div class="space-y-8">
        {experienceData.map((exp, index) => (
          <div 
            class={`bg-slate-50 p-6 md:p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow border-l-4 border-purple-600 fade-in-card`}
            style={`animation-delay: ${index * 0.2}s`}
          >
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
              <div>
                <h3 class="text-2xl font-bold text-slate-900 mb-2">{exp.title}</h3>
                <div class="flex items-center gap-2 text-purple-600 font-semibold mb-2">
                  <Briefcase size={18} />
                  <span>{exp.company}</span>
                </div>
              </div>
              <div class="flex flex-col gap-2 text-slate-600">
                <div class="flex items-center gap-2">
                  <Calendar size={16} />
                  <span class="text-sm">{exp.period}</span>
                </div>
                <div class="flex items-center gap-2">
                  <MapPin size={16} />
                  <span class="text-sm">{exp.location}</span>
                </div>
              </div>
            </div>
            
            <ul class="space-y-2">
              {exp.description.map((desc) => (
                <li class="text-slate-700 flex items-start gap-3">
                  <span class="text-purple-600 mt-1">â€¢</span>
                  <span>{desc}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }
  
  .fade-in-card {
    animation: fadeInUp 0.6s ease-out both;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
