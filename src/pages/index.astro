---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Hero from '../components/Hero';
import AboutStatic from '../components/AboutStatic.astro';
import ExperienceStatic from '../components/ExperienceStatic.astro';
import ProjectsEnhanced from '../components/ProjectsEnhanced';
import SkillsEnhanced from '../components/SkillsEnhanced';
import ContactStatic from '../components/ContactStatic.astro';
---

<Layout 
  title="Carlos González | Full Stack Developer" 
  description="Portafolio profesional de Carlos González - Ingeniero en Informática especializado en desarrollo Full Stack, aplicaciones web y e-commerce."
>
  <!-- Header: Solo se carga cuando el navegador está inactivo para mejor performance inicial -->
  <Header client:idle />
  
  <main>
    <!-- Hero: Se carga cuando es visible en el viewport con animaciones espectaculares -->
    <Hero client:visible />
    
    <!-- About y Experience: Renderizados en el servidor -->
    <AboutStatic />
    <ExperienceStatic />
    
    <!-- Projects y Skills: Componentes mejorados con animaciones 3D -->
    <ProjectsEnhanced client:visible />
    <SkillsEnhanced client:visible />
    
    <!-- Contact: Renderizado en el servidor -->
    <ContactStatic />
  </main>
  
  <footer class="bg-slate-900 text-slate-300 py-8 text-center">
    <p>© {new Date().getFullYear()} Carlos González. Todos los derechos reservados.</p>
    <p class="text-sm mt-2">Desarrollado con Astro + Renderizado en Servidor</p>
  </footer>
</Layout>
